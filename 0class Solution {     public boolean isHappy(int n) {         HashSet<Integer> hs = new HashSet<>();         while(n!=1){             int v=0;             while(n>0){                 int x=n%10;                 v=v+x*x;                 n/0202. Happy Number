class Solution {
    public boolean isHappy(int n) {
        HashSet<Integer> hs = new HashSet<>();
        while(n!=1){
            int v=0;
            while(n>0){
                int x=n%10;
                v=v+x*x;
                n/=10;
            }
            n=v;
            if(hs.contains(n)) return false;
            hs.add(n);
        }
        return true;
    }
}
